<%= render :partial=>"messages_menu" %>
<% if @inbox_messages.blank? %>
<label>Inbox is empty</label>
<% else %>
  <table class="table table-hover table-bordered">
    <thead>
      <th>From</th>
      <th>Subject</th>
      <th>On</th>
    </thead>
    <tbody>
    <% @inbox_messages.each do |message| %>
      <tr>
        <td><%=h message.parent.sender.full_name %></td>
        <td><%=h message.subject %></td>
        <td><%=h message.parent.sent_at %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>